<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.frpinkl.pasardatosagenda.Activity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/etiquetaNombre"
        android:textSize="50px"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombreActivity2"
        android:hint="Introducir nombre"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:id="@+id/etiquetaTelefono"
        android:textSize="50px"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefonoActivity2"
        android:hint="Introducir teléfono"/>

   <!--
   comentado para hacer el borrado de la agenda a lo cutre
   <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:id="@+id/botonEditar" />-->

    <Space
        android:layout_width="fill_parent"
        android:layout_height="50px" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:id="@+id/botonBorrar" />


</LinearLayout>
